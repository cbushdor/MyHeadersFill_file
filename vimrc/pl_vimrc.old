" ---------------------------------------------------------------------------------------
".pl perl 5 programming
"autocmd *.pl updateVersionNumber

function! Pa()
	echo g:path_to_header_file
endfunction

augroup updateVersionNumberP5
	au! updateVersionNumberP5
	autocmd Bufwritepre,filewritepre *.pl execute "normal ma" 
	let $TMP=substitute(system("echo ".g:path_to_header_file),"\n","","")
	echo "**********>" . $TMP
	autocmd BufNewFile *.pl so $TMP
	autocmd BufNewFile *.pl exe "1," . 10 . "g/Creation Date :.*/s//Creation Date : " .strftime("%F %T")
	autocmd BufWritePre,FileWritePre *.pl exe "1," . 12 . "g/Created By :.*/s/Created By :.*/Created By : " .$USER
	autocmd BufWritePre,FileWritePre *.pl exe "1," . 11 . "g/File Name :.*/s/File Name :.*/File Name : " .expand('%:t')
	autocmd BufWritePre,FileWritePre *.pl exe "1," . 12 . "g/Last Modified :.*/s/Last Modified :.*/Last Modified : " .strftime("%F %T")
	autocmd BufWritePost *.pl exe "1," . line("$") . "g/\^my \$VERSION=\".*/s/my \$VERSION=\".*/my \$VERSION=\"".system("/Users/sdo/.vim/vimrc/update_version_header.sh INCREASENUM ".expand('%:t'))|:write
	autocmd BufWritePost *.pl exe "1," . line("$") . "g/Version :.*/s/Version :.*/Version : " .system("/Users/sdo/.vim/vimrc/update_version_header.sh PRINTNUM ".expand('%:t'))|:write
	autocmd BufWritePre,FileWritePre *.pl exe "1," . 15 . "g/Email Address :.*/s/Email Address :.*/Email Address : " .$EMAIL
	echo "CGI header scipt loaded!!!"
	autocmd bufwritepost,filewritepost *.pl execute "normal `a" 
augroup END
